{
  "name": "vibe-stack",
  "version": "0.1.0",
  "private": true,
  "description": "A production-ready full-stack starter with Next.js 15, Convex, Stripe, and shadcn/ui",
  "scripts": {
    "setup": "bash scripts/setup.sh",
    "dev": "next dev --turbopack",
    "build": "next build",
    "build:prod": "NODE_ENV=production next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "fix": "pnpm lint:fix && pnpm format",
    "test": "vitest",
    "test:run": "vitest run",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "prepare": "husky",
    "env:pull:vercel": "pnpm env:pull:vercel:development && pnpm env:pull:vercel:preview && pnpm env:pull:vercel:production",
    "env:pull:vercel:development": "vercel env pull .env.development.local --environment development",
    "env:pull:vercel:preview": "vercel env pull .env.preview.local --environment preview",
    "env:pull:vercel:production": "vercel env pull .env.production.local --environment production",
    "env:pull:convex": "./scripts/convex/env-pull.sh all",
    "env:pull:convex:development": "./scripts/convex/env-pull.sh development",
    "env:pull:convex:preview": "./scripts/convex/env-pull.sh preview",
    "env:pull:convex:production": "./scripts/convex/env-pull.sh production",
    "env:push:convex:development": "./scripts/convex/env-push.sh development",
    "env:push:convex:preview": "./scripts/convex/env-push.sh preview",
    "env:push:convex:production": "./scripts/convex/env-push.sh production",
    "env:verify:convex": "./scripts/convex/env-verify.sh"
  },
  "dependencies": {
    "@convex-dev/auth": "^0.0.90",
    "@convex-dev/react-query": "0.0.0-alpha.11",
    "@next/env": "^15.3.3",
    "@radix-ui/react-avatar": "^1.1.10",
    "@radix-ui/react-dialog": "^1.1.14",
    "@radix-ui/react-dropdown-menu": "^2.1.15",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-navigation-menu": "^1.2.13",
    "@radix-ui/react-radio-group": "^1.3.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-tooltip": "^1.2.7",
    "@tailwindcss/postcss": "4.1.4",
    "@tanstack/react-query": "^5.90.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "convex": "^1.27.3",
    "date-fns": "^4.1.0",
    "env-var": "^7.5.0",
    "lucide-react": "^0.501.0",
    "next": "16.1.3",
    "postcss": "^8.5.3",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "server-only": "^0.0.1",
    "stripe": "^18.1.1",
    "tailwind-merge": "^3.3.0",
    "tailwindcss": "4.1.7",
    "tailwindcss-animate": "^1.0.7",
    "typescript": "^5.8.3",
    "zod": "^3.25.28"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.6.1",
    "@commitlint/config-conventional": "^19.6.0",
    "@ianvs/prettier-plugin-sort-imports": "^4.4.1",
    "@playwright/test": "^1.50.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.1.0",
    "@types/node": "^22.15.21",
    "@types/react": "19.1.2",
    "@types/react-dom": "19.1.2",
    "@vitejs/plugin-react": "^4.3.4",
    "@vitest/coverage-v8": "^2.1.8",
    "@vitest/ui": "^2.1.8",
    "autoprefixer": "^10.4.21",
    "@eslint/eslintrc": "^3.2.0",
    "eslint": "^9.18.0",
    "eslint-config-next": "^15.1.6",
    "eslint-config-prettier": "^10.0.1",
    "husky": "^9.1.7",
    "jsdom": "^25.0.1",
    "lint-staged": "^15.4.3",
    "prettier": "^3.5.3",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "vitest": "^2.1.8"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "packageManager": "pnpm@9.0.0"
}
